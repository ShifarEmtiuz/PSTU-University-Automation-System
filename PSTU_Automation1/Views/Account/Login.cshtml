@model LoginViewModel

@{
    ViewBag.Title = "User Login";

    ViewBag.PageHeaderTitle = $"User Login";
    ViewBag.PageHeaderSection = "Account";
    
    
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="text-center alert alert-dismissible fade show" style="background: greenyellow">
        <h2>@ViewBag.ErrorTitle</h2>
        <p>@ViewBag.ErrorMessage</p>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}


<div class="container">
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4 d-inline-block">
            <h3 class="text-center">PSTU Profile Login</h3>
            <hr />
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email">User Name/Academic Id</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" type="password" />
                        <div class="input-group-append">
                            <span id="PasswordHider" class="input-group-text" onclick="showPass('Password')">
                                <i class="fa fa-eye"></i>
                            </span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <input hidden="" asp-for="ReturnUrl"/>
                <button type="submit" class="btn btn-lg w-100 btn-piis">Login</button>
                <div class="mt-1">
                    <a asp-action="Recover">Forgot Password?</a>
                </div>
            </form>
        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>